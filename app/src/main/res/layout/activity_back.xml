<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.settingpwd.BackPwdActivity">
    <TextView
        android:id="@+id/backpwd_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_104"
        android:textSize="19sp"
        android:textColor="@color/registertitle"
        android:text="找回密码"/>
    <TextView
        android:layout_width="40dp"
        android:layout_height="8dp"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/registertitle"
        />
    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginRight="@dimen/dp_37"
        android:textSize="16sp"
        android:textColor="@color/login"
        android:textColorHint="@color/hint"
        android:theme="@style/MyEditText"
        android:hint="请输入手机号"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginRight="@dimen/dp_37">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/login"
            android:textColorHint="@color/hint"
            android:theme="@style/MyEditText"
            android:hint="请输入验证码"/>
        <TextView
            android:id="@+id/btn_yzm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_190"
            android:textColor="@color/btnregister"
            android:textSize="@dimen/sp_15"
            android:text="获取验证码"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginRight="@dimen/dp_37"
        android:textSize="16sp"
        android:textColor="@color/login"
        android:textColorHint="@color/hint"
        android:theme="@style/MyEditText"
        android:hint="重设密码"/>
    <EditText
        android:id="@+id/et_verify_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginRight="@dimen/dp_37"
        android:textSize="16sp"
        android:textColor="@color/login"
        android:textColorHint="@color/hint"
        android:theme="@style/MyEditText"
        android:hint="确认密码"/>

    <Button
        android:id="@+id/btn_verify"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/btnnext"
        android:textSize="22sp"
        android:textColor="@color/login"
        android:text="确认"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_gray"
            android:text="注册即代表你已同意"/>
        <TextView
            android:id="@+id/btn_userxieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/btnregister"
            android:text="《用户协议》"/>
    </LinearLayout>

</LinearLayout>