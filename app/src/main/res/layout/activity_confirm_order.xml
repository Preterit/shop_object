<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.shangyi.kt.ui.order.ConfirmOrderModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context="com.shangyi.kt.ui.order.ConfirmOrderActivity">

    <com.shangyi.business.weight.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:leftLayoutIconIsGray="true"
        app:titleValue="确认订单" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/confirm_order_address_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/payitem"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/confirm_order_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="#333333"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/confirm_order_address_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12272637883"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/confirm_order_address_name"
            />

        <TextView
            android:id="@+id/confirm_order_address_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市朝阳区司机电话电话"
            android:textColor="#333333"
            android:layout_marginTop="12dp"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirm_order_address_name"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/confirm_order_goods_rcy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/payitem"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/confirm_order_address_con"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/confirm_order_con"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/payitem"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/confirm_order_goods_rcy">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#333333"
            android:textSize="12sp"
            android:text="优惠券"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/confirm_order_youhuiquan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#333333"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:text="暂无可用"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            app:layout_constraintRight_toLeftOf="@id/confirm_order_right"
            />
        <ImageView
            android:id="@+id/confirm_order_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/right"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/confirm_order_conbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/payitem"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/confirm_order_con">

        <TextView
            android:id="@+id/tv_item_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="12sp"
            android:text="商品金额"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/confirm_order_conbottom"
            />
        <TextView
            android:id="@+id/confirm_order_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="12sp"
            android:layout_marginRight="15dp"
            android:text="￥88"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/confirm_order_conbottom"
            />

        <TextView
            android:id="@+id/tv_yunfei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="12sp"
            android:text="运费"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_item_top"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="12sp"
            android:text="+￥0.00"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/confirm_order_goods_price"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/confirm_order_xuanze"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/weixuan_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_order_conbottom"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="匿名下单"
        android:textSize="12sp"
        android:textColor="#333333"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintLeft_toRightOf="@id/confirm_order_xuanze"
        app:layout_constraintTop_toBottomOf="@id/confirm_order_conbottom"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF2E1"
        android:text="下单返:￥30"
        android:textColor="#F1190D"
        android:textSize="15sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/con_item"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/tv_item_fukuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应付金额："
            android:textColor="#333333"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥：8438"
            android:textColor="#FF2942"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_item_fukuan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免运费"
            android:textColor="#999999"
            android:textSize="10sp"
            android:layout_marginTop="7sp"
            app:layout_constraintTop_toBottomOf="@id/tv_item_fukuan"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:background="@drawable/btnnext"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>