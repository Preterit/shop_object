<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.shangyi.kt.ui.mine.mine_vip.PointsShopActivity">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:background="@drawable/points_shop_top_black_bg"
            app:layout_constraintTop_toTopOf="parent" />

        <com.shangyi.business.weight.TitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bgColor="@color/translate"
            app:layout_constraintTop_toTopOf="parent"
            app:leftLayoutIsShow="true"
            app:titleColor="@color/white"
            app:titleValue="积分商城" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="100dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
