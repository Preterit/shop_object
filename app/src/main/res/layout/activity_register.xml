<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.shangyi.kt.ui.userlogin.model.LoginModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/register_bg_img"
        android:orientation="vertical"
        tools:context="com.shangyi.kt.ui.userlogin.login.RegisterActivity">

        <TextView
            android:id="@+id/register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_104"
            android:text="欢迎注册成为上医会员"
            android:textColor="@color/registertitle"
            android:textSize="19sp" />

        <TextView
            android:layout_width="77dp"
            android:layout_height="8dp"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/registertitle" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_37"
            android:layout_marginTop="@dimen/dp_121"
            android:layout_marginRight="@dimen/dp_37"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/login"
            android:textColorHint="@color/hint"
            android:textSize="15sp"
            android:theme="@style/MyEditText" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_37"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_37">

            <EditText
                android:id="@+id/register_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/login"
                android:textColorHint="@color/hint"
                android:textSize="15sp"
                android:theme="@style/MyEditText" />

            <TextView
                android:id="@+id/btn_yzm"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:gravity="center|right"
                android:text="获取验证码"
                android:textColor="@color/btnyzm"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn"
            android:text="下一步"
            android:textColor="@color/btnregister"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册即代表你已同意"
                android:textColor="#EDA8A8"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/btn_userxieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="《用户协议》"
                android:textColor="@color/btnyzm"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有账号?"
                android:textColor="@color/login"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btn_gologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="立即登陆"
                android:textColor="@color/btnyzm"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</layout>