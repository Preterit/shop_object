<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.replenish.ReplenishActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/setpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_104"
            android:textSize="19sp"
            android:textColor="@color/registertitle"
            android:text="补充个人资料信息"/>
        <TextView
            android:id="@+id/register_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_104"
            android:textSize="19sp"
            android:textColor="@color/btnregister"
            android:text="跳过"/>
    </LinearLayout>

    <TextView
        android:layout_width="77dp"
        android:layout_height="8dp"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/registertitle"
        />
    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_66"
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginRight="@dimen/dp_37"
        android:textSize="16sp"
        android:textColor="@color/login"
        android:textColorHint="@color/hint"
        android:theme="@style/MyEditText"
        android:hint="请输入密码"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_37"
            android:layout_marginRight="@dimen/dp_37"
            android:textSize="16sp"
            android:textColor="@color/login"
            android:textColorHint="@color/hint"
            android:theme="@style/MyEditText"
            android:hint="请输入确认密码"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginRight="@dimen/dp_37"
        android:textSize="16sp"
        android:textColor="@color/login"
        android:textColorHint="@color/hint"
        android:theme="@style/MyEditText"
        android:hint="请输入生日"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginRight="@dimen/dp_37"
        android:textSize="16sp"
        android:textColor="@color/login"
        android:textColorHint="@color/hint"
        android:theme="@style/MyEditText"
        android:hint="请输入您的个性签名"/>
    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_240"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_gravity="start"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image"
        android:padding="@dimen/dp_15"
        android:src="@mipmap/next_icon"
        android:background="@drawable/btnnext"/>

</LinearLayout>