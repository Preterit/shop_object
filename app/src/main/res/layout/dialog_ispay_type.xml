<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/goodsyuanjiao"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:text="确认放弃付款吗？"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="17sp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="23dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/pay_djs"/>
        <TextView
            android:id="@+id/pay_djs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超时支付失效后，订单会被取消哦"
            android:textColor="#999999"
            android:textSize="12sp"
            android:padding="5dp"
            android:background="@drawable/payitem"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@id/ll_pay_ali"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            app:layout_constraintBottom_toTopOf="@id/ll_pay_ali"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_eeeeee"/>
        <LinearLayout
            android:id="@+id/ll_pay_ali"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/tv_queren"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="确定离开"
                android:textColor="#333333"
                android:textSize="16sp"/>
            <ImageView
                app:layout_constraintBottom_toTopOf="@id/ll_pay_ali"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee"/>
            <TextView
                android:id="@+id/tv_jx_pay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="继续支付"
                android:textColor="#FF2942"
                android:textSize="16sp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>