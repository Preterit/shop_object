<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/translate"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <LinearLayout
        android:id="@+id/llLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_sex_selcect_bg"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="17dp"
            android:text="女"
            android:textColor="#15519B"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_DDDDDD" />

        <TextView
            android:id="@+id/tvMan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="17dp"
            android:text="男"
            android:textColor="#15519B"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tvNv" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_DDDDDD" />

        <TextView
            android:id="@+id/tvBaomi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="17dp"
            android:text="保密"
            android:textColor="#15519B"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tvMan" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_sex_selcect_bg"
        android:gravity="center"
        android:padding="17dp"
        android:text="保密"
        android:textColor="#15519B"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/llLayout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/translate"
        app:layout_constraintTop_toBottomOf="@+id/tvCancel" />
</androidx.constraintlayout.widget.ConstraintLayout>