<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:padding="14dp"
        android:src="@drawable/black_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/ivBack"
        app:layout_constraintRight_toLeftOf="@+id/ivShare">


        <TextView
            android:id="@+id/tvProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableBottom="@drawable/shape_goods_detail_top_red_line_selecter"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="商品"
            android:textColor="@color/goods_detail_top_color_select"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvPinjia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableBottom="@drawable/shape_goods_detail_top_red_line_selecter"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="评价"
            android:textColor="@color/goods_detail_top_color_select"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableBottom="@drawable/shape_goods_detail_top_red_line_selecter"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="详情"
            android:textColor="@color/goods_detail_top_color_select"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTuijian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableBottom="@drawable/shape_goods_detail_top_red_line_selecter"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="推荐"
            android:textColor="@color/goods_detail_top_color_select"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:padding="13dp"
        android:src="@drawable/icon_goods_share"
        app:layout_constraintRight_toLeftOf="@+id/ivMore" />

    <ImageView
        android:id="@+id/ivMore"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:padding="13dp"
        android:src="@drawable/icon_goods_more"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>