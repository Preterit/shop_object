<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.study.glidemodel.GlideImageView
        android:id="@+id/ivUserPhoto"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="13dp"
        android:src="@drawable/duck"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:siv_shape_type="circle" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="飞***店"
        android:textColor="@color/color_999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserPhoto"
        app:layout_constraintLeft_toRightOf="@+id/ivUserPhoto"
        app:layout_constraintTop_toTopOf="@+id/ivUserPhoto" />

    <TextView
        android:id="@+id/tvPjContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="15dp"
        android:text="评价内容评价内容评价内容评价内容评价内容评价内容评价内容评价内容评价内容评价内容评价内容评价内容"
        android:textColor="@color/color_333333"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/ivUserPhoto" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imgRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPjContent" />

</androidx.constraintlayout.widget.ConstraintLayout>
